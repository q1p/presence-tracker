<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Text.Title" parent="TextAppearance.AppCompat.Title" />

    <style name="AppTheme.Text.Medium" parent="TextAppearance.AppCompat.Medium" />

    <style name="AppTheme.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:maxLength">@integer/et_generic_max_len</item>
    </style>

    <style name="AppTheme.EditText.SsidName" parent="Widget.AppCompat.EditText">
        <item name="android:maxLength">@integer/et_ssid_name_max_len</item>
        <item name="android:maxLines">1</item>
    </style>

</resources>
